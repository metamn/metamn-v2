{
  "text_styles": [
    {
      "name": "Default",
      "description": "The basic settings for a text.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-regular"
        },
        {
          "name": "scale",
          "value": "default"
        },
        {
          "name": "colors",
          "value": "black-on-white"
        }
      ],
      "properties": [
        {
          "name": "letter-spacing",
          "value": "1.1px"
        }
      ]
    },
    {
      "name": "Body text",
      "description": "Settings for long text blocks.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "p"
        }
      ],
      "properties": [
        {
          "name": "max-width",
          "value": "25em"
        }
      ]
    },
    {
      "name": "Body text large",
      "description": "Larger font size for long text blocks.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "scale",
          "value": "large-1"
        }
      ],
      "properties": [
        {
          "name": "max-width",
          "value": "35em"
        }
      ]
    },
    {
      "name": "Logo",
      "description": "Settings for the Metamn logo.",
      "based_on": "Silkscreen",
      "mixins": [
        {
          "name": "font",
          "value": "silkscreen-regular"
        },
        {
          "name": "scale",
          "value": "large-1"
        }
      ]
    },
    {
      "name": "Large",
      "description": "Settings for large text blocks",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans"
        },
        {
          "name": "scale",
          "value": "large-1"
        }
      ],
      "properties": [
        {
          "name": "max-width",
          "value": "25em"
        },
        {
          "name": "line-height",
          "value": "1.25"
        }
      ]
    },
    {
      "name": "Headline",
      "description": "Settings for headlines.",
      "based_on": "Nimbus Sans Black",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-black"
        },
        {
          "name": "scale",
          "value": "large-3"
        },
        {
          "name": "uppercase",
          "value": "$lem / 8"
        }
      ],
      "properties": [
        {
          "name": "line-height",
          "value": "1.2"
        }
      ],
      "responsive": [
        {
          "breakpoint": "mobile",
          "mixins": [
            {
              "name": "font",
              "value": "nimbus-sans-bold"
            },
            {
              "name": "scale",
              "value": "large-2"
            }
          ],
          "properties": [
            {
              "name": "line-height",
              "value": "1.5"
            }
          ]
        }
      ]
    },
    {
      "name": "Title",
      "description": "Settings for titles.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "uppercase",
          "value": "1.25px"
        },
        {
          "name": "scale",
          "value": "large-1"
        }
      ]
    },
    {
      "name": "Quote",
      "description": "Settings for quotes.",
      "based_on": "Nimbus Sans",
      "mixins": [
        {
          "name": "scale",
          "value": "large-2"
        }
      ]
    },
    {
      "name": "Name",
      "description": "Settings for names.",
      "based_on": "Nimbus Sans Black",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-black"
        },
        {
          "name": "uppercase",
          "value": "1px"
        }
      ]
    },
    {
      "name": "Button with triangle",
      "description": "Strong text, call for action.",
      "based_on": "Nimbus Sans Black",
      "mixins": [
        {
          "name": "font",
          "value": "nimbus-sans-black"
        },
        {
          "name": "uppercase",
          "value": "1.25px"
        },
        {
          "name": "colors",
          "value": "white-on-black"
        }
      ],
      "properties": [
        {
          "name": "padding",
          "value": "$lem / 2 $lem"
        }
      ]
    },
    {
      "name": "Button with arrow triangle",
      "description": "Strong text, call for action.",
      "based_on": "Nimbus Sans Regular",
      "mixins": [
        {
          "name": "uppercase",
          "value": "1.25px"
        },
        {
          "name": "border",
          "value": "normal, all"
        }
      ],
      "properties": [
        {
          "name": "padding",
          "value": "$lem / 2 $lem"
        },
        {
          "name": "transform",
          "value": "translateX($lem)"
        }
      ]
    }
  ]
}
